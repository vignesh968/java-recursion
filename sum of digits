// find the sum of digits using recursion
import java.util.*;
public class Main
{
  public static void main(String[]args)
  {
    Scanner s=new Scanner(System.in);
    int a=s.nextInt();
    System.out.println(n_digit(a));
  }
    static long n_digit(long n)
    {
      if(n==0)
      {
        return 0;
      }
      else
      {
        
       return (n%10)+(n_digit(n/10)) ;
      }
    }
  
}
